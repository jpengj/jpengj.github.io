{
  "name": "penjj-blog",
  "type": "module",
  "packageManager": "pnpm@8.6.12",
  "description": "My personal website and blog.",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "prepare": "simple-git-hooks",
    "ts-check": "tsc --noEmit && astro check --noEmit",
    "test": "vitest",
    "lint": "eslint . --fix"
  },
  "dependencies": {
    "astro": "^4.8.2",
    "classnames": "^2.5.1",
    "solid-js": "^1.8.17"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.17.0",
    "@astrojs/check": "^0.6.0",
    "@astrojs/mdx": "^3.0.0",
    "@astrojs/solid-js": "^4.2.0",
    "@iconify-json/bi": "^1.1.23",
    "@unocss/preset-attributify": "^0.60.0",
    "@unocss/reset": "^0.60.0",
    "bumpp": "^9.4.1",
    "cssnano": "^7.0.1",
    "daisyui": "^3.7.5",
    "eslint-plugin-format": "^0.1.1",
    "happy-dom": "^14.10.1",
    "lint-staged": "^15.2.2",
    "postcss-nested": "^6.0.1",
    "prettier-plugin-astro": "^0.13.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5",
    "unocss": "^0.60.3",
    "unocss-preset-daisy": "^7.0.0",
    "vitest": "^1.6.0",
    "vue-commitlint": "^0.1.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm vue-commitlint"
  },
  "lint-staged": {
    "*.{ts,tsx,astro}": [
      "eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
